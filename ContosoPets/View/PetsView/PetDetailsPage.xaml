<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ContosoPets.ViewModels.PetsViewModels"
             x:Class="ContosoPets.View.PetsView.PetDetailsPage"
             Title="Pet Details"
             BackgroundColor="#F3F4F6"
             x:DataType="vm:PetDetailsViewModel">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="25">

            <!-- Header Section -->
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    BackgroundColor="#FFFFFF"
                    Padding="20"
                    StrokeShape="RoundRectangle 12">
                <Border.Shadow>
                    <Shadow Brush="IndianRed"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.1"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Pet.PetName, StringFormat='Name: {0}'}"
                                FontSize="28"
                                FontAttributes="Bold"
                                TextColor="#2D3758" 
                                HorizontalOptions="Start"/>
                    <Label Text="{Binding Pet.PetSpecie, StringFormat='Species: {0}'}"
                                FontSize="18"
                                FontAttributes="Italic"
                                TextColor="#4a5568" />
                </VerticalStackLayout>
            </Border>
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    BackgroundColor="#FFFFFF"
                    Padding="20"
                    StrokeShape="RoundRectangle 12">
                <Border.Shadow>
                    <Shadow Brush="IndianRed"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.1"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Pet.Owner.OwnerName, StringFormat='Owner: {0}'}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#2D3758" 
                           HorizontalOptions="Start"/> 
                </VerticalStackLayout>
            </Border>

            <!-- Details Section -->
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    BackgroundColor="#FFFFFF"
                    Padding="20"
                    StrokeShape="RoundRectangle 12">
                <Border.Shadow>
                    <Shadow Brush="IndianRed"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.1"/>
                </Border.Shadow>
                <Grid 
                    RowDefinitions="Auto,Auto,Auto"
                    ColumnDefinitions="20,Auto,Auto"
                    RowSpacing="12"
                    ColumnSpacing="10">
                    <Image Source="age_icon.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                    <Label Text="Age:"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#2D3748"
                            Grid.Row="0"
                            Grid.Column="1" 
                            VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                    <Label Text="{Binding Pet.PetAge}"
                               FontSize="16"
                               TextColor="#4a5568"
                               Grid.Row="0"
                               Grid.Column="2" />

                    <Image Source="pet_physical_description_icon.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>      
                    <Label Text="Physical Description:"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               Grid.Row="1"
                               Grid.Column="1" />
                    <Label Text="{Binding Pet.PetPhysicalDescription}"
                               FontSize="16"
                               TextColor="#555555"
                               Grid.Row="1"
                               Grid.Column="2" />
                    <Image Source="pet_personal_description_icon.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                    <Label Text="Personal Description:"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               Grid.Row="2"
                               Grid.Column="1" />
                    <Label Text="{Binding Pet.PetPersonalDescription}"
                               FontSize="16"
                               TextColor="#555555"
                               Grid.Row="2"
                               Grid.Column="2" />
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="15"
                  Margin="0,10,0,0">
                <Button Text="Back"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10" />
                <Button Text="Edit"
                        Command="{Binding EditPetCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Grid.Column="1" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>