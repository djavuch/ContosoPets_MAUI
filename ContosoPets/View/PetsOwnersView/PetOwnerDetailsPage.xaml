<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ContosoPets.ViewModels.PetsOwnersViewModels"
             xmlns:model="clr-namespace:ContosoPets.Models"
             x:Class="ContosoPets.View.PetsOwnersView.PetOwnerDetailsPage"
             Title="Owner profile"
             BackgroundColor="#F3F4F6">

    <Grid RowDefinitions="200, 180, Auto"
              ColumnDefinitions="200, 220"
              Padding="15"
              RowSpacing="15"
              ColumnSpacing="20">
        <!-- Owner name -->
        <Border Grid.Row="0" Grid.Column="0"
                    BackgroundColor="#F8F9FA"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                x:DataType="vm:PetOwnerDetailsViewModel">
            <VerticalStackLayout>
                <Label Text="Name:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerName}"
                           FontSize="14"
                           TextColor="#555555" />
            </VerticalStackLayout>
        </Border>

        <!-- Address -->
        <Border Grid.Row="0" Grid.Column="1"
                    BackgroundColor="#F8F9FA"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                x:DataType="vm:PetOwnerDetailsViewModel">
            <VerticalStackLayout >
                <Label Text="Zip code"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerZipCode}"
                           FontSize="14"
                           TextColor="#555555"
                           LineBreakMode="WordWrap" />
                <Label Text="State"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerState}"
                           FontSize="14"
                           TextColor="#555555"
                           LineBreakMode="WordWrap" />
                <Label Text="City"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerCity}"
                           FontSize="14"
                           TextColor="#555555"
                           LineBreakMode="WordWrap" />
                <Label Text="Address"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerAddress}"
                           FontSize="14"
                           TextColor="#555555"
                           LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </Border>

        <!-- Email & phone -->
        <Border Grid.Row="1" Grid.Column="0"
                    BackgroundColor="#F8F9FA"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                x:DataType="vm:PetOwnerDetailsViewModel">
            <VerticalStackLayout Spacing="5">
                <Label Text="Email"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <Label Text="{Binding PetOwner.OwnerEmail}"
                           FontSize="14"
                           TextColor="#555555" />
                <Label Text="Phone"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333"
                           Margin="0,5,0,0" />
                <Label Text="{Binding PetOwner.OwnerPhone}"
                           FontSize="14"
                           TextColor="#555555" />
            </VerticalStackLayout>
        </Border>

        <!-- Pet name -->
        <Border Grid.Row="1" Grid.Column="1"
                    BackgroundColor="#F8F9FA"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                x:DataType="vm:PetOwnerDetailsViewModel">
            <VerticalStackLayout>
                <Label Text="Pets"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#333333" />
                <CollectionView ItemsSource="{Binding PetOwner.Pets}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:PetsModel">
                            <Label Text="{Binding PetName}"
                                   FontSize="14"
                                   TextColor="#555555" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                  Spacing="10"
                                  HorizontalOptions="Center"
                                  Margin="0,10,0,0"
                                  x:DataType="vm:PetOwnerDetailsViewModel">
            <Button Text="Go back"
                    BackgroundColor="#2ec42c"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10,5"
                    Command="{Binding GoBackCommand}" />
            <Button Text="Edit"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10,5"
                    Command="{Binding EditPetOwnerCommand}" />
            <Button Text="Delete"
                    BackgroundColor="#ff3336"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10,5"
                    Command="{Binding DeletePetOwnerCommand}" />  
        </HorizontalStackLayout>
    </Grid>

</ContentPage>    